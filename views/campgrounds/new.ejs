<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center"> New Campgrounds </h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" novalidate class="validated-form">
            <div class="mb-3">
                <label for="title" class="form-label"> Title </label>
                <input type="text" name="campground[title]" id="title" class="form-control"  required>
                <div class="valid-feedback">
                    Looks goob!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label"> Location </label>
                <input type="text" name="campground[location]" id="location" class="form-control" required>
                <div class="valid-feedback">
                    Looks goob!
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label"> Image URL </label>
                <input type="text" name="campground[image]" id="image" class="form-control" required>
                <div class="valid-feedback">
                    Looks goob!
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label"> Description </label>
                <textarea type="text" name="campground[description]" id="description" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks goob!
                </div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label" > Price </label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                </div>
                <div class="valid-feedback">
                    Looks goob!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success"> Add Campground </button>
            </div>
        </form>    

        <a href="/campgrounds"> Back to All Campgrounds </a>
    </div>
    
</div>
